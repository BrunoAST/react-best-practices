{
    "compilerOptions": {
        "target": "ES6",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ESNext"
        ],
        "plugins": [{ "name": "typescript-plugin-css-modules" }],
        "esModuleInterop": true,
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "rootDir": "src",
        "baseUrl": "src",
        "allowJs": true,
        "resolveJsonModule": true
    },
    "include": [
        "src"
    ]
}